<?xml version="1.0" encoding="utf-8"?>
<mouse.com.test.widgets.DraggableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_draggable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/id_tv_content"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/id_ll_menu"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/id_btn_in_menu1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_lock_idle_alarm" />

        <Button
            android:id="@+id/id_btn_in_menu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@android:drawable/checkbox_on_background" />

        <Button
            android:id="@+id/id_btn_in_menu3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_delete" />


    </LinearLayout>


</mouse.com.test.widgets.DraggableLayout>
